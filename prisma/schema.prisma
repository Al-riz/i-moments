datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  password_hash String
  events        Event[]
  created_at    DateTime @default(now())
}

model Event {
  id          Int      @id @default(autoincrement())
  user_id     Int
  user        User     @relation(fields: [user_id], references: [id])
  title       String
  description String
  date_time   DateTime
  location    String
  theme       String
  music_url   String?
  link_slug   String   @unique
  rsvps       RSVP[]
  created_at  DateTime @default(now())
}

model RSVP {
  id          Int      @id @default(autoincrement())
  event_id    Int
  event       Event    @relation(fields: [event_id], references: [id])
  guest_name  String
  guest_phone String
  status      String
  created_at  DateTime @default(now())
}
